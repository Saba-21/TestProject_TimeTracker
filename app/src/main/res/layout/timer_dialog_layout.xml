<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dialog_shape"
    android:gravity="center">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/view_name_time"
        android:id="@+id/timer"
        android:layout_marginBottom="@dimen/Dialog_view_margin"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="finishButton"
        android:padding="@dimen/dialog_view_padding"
        android:text="@string/dialog_view_finish_button"
        android:background="@drawable/dialog_shape"
        android:layout_marginTop="@dimen/Dialog_view_margin"/>

</LinearLayout>
